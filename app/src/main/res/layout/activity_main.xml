<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etDia"
        android:layout_width="293dp"
        android:layout_height="67dp"
        android:layout_marginBottom="63dp"
        android:ems="10"
        android:hint="@string/etDia"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/etMes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etMes"
        android:layout_width="299dp"
        android:layout_height="64dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="59dp"
        android:ems="10"
        android:hint="@string/etMes"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/etAno"
        app:layout_constraintStart_toStartOf="@+id/etDia" />

    <EditText
        android:id="@+id/etAno"
        android:layout_width="290dp"
        android:layout_height="56dp"
        android:layout_marginBottom="279dp"
        android:ems="10"
        android:hint="@string/etAno"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/etMes" />

    <Button
        android:id="@+id/btnCalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="44dp"
        android:text="@string/calcular"
        app:layout_constraintStart_toStartOf="@+id/etAno"
        app:layout_constraintTop_toBottomOf="@+id/etAno" />

    <TextView
        android:id="@+id/tvRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCalc" />
</androidx.constraintlayout.widget.ConstraintLayout>